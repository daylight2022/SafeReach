{
  "name": "safereach-backend",
  "version": "1.0.0",
  "description": "SafeReach 后端服务 - 基于 Hono 的现代化 API 服务",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc",
    "build:esbuild": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:pg-native",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:migrate:prod": "node dist/db/migrate.js",
    "db:seed:prod": "node dist/db/seed.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.3",
    "@types/node-cron": "^3.0.11",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "dotenv-flow": "^4.1.0",
    "drizzle-kit": "^0.24.0",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
